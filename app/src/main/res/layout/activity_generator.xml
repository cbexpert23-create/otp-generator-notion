<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:context="com.mirusystems.otp.GeneratorActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/groupLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioGroup
                android:id="@+id/deviceGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:checkedButton="@+id/vvdButton"
                app:layout_constraintEnd_toStartOf="@+id/pollingStationEdit"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/deviceHintText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_device_hint"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/vvdButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="VVD"
                    android:textSize="45sp" />

                <RadioButton
                    android:id="@+id/pcosButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="PCOS"
                    android:textSize="45sp" />

                <RadioButton
                    android:id="@+id/rtsButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="RTS"
                    android:textSize="45sp" />
            </RadioGroup>

            <EditText
                android:id="@+id/pollingStationEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/msg_psid_hint"
                android:inputType="number"
                android:maxLength="8"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/deviceGroup"
                app:layout_constraintTop_toTopOf="@+id/deviceGroup" />

            <EditText
                android:id="@+id/randomNumberEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/msg_random_hint"
                android:inputType="number"
                android:maxLength="3"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="@+id/pollingStationEdit"
                app:layout_constraintStart_toStartOf="@+id/pollingStationEdit"
                app:layout_constraintTop_toBottomOf="@+id/pollingStationEdit" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/generateButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/msg_genenrate_btn"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/groupLayout" />

        <TextView
            android:id="@+id/passwordText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="70sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/generateButton" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>